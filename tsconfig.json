{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@application/*": ["application/*"],
            "@infrastructure/*": ["infrastructure/*"],
            "@domain/*": ["domain/*"],
            "@helper/*": ["helper/*"]
        },
        "outDir": "./dist",
        "plugins": [{ "transform": "typescript-transform-paths" }]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "esm": true,
}
