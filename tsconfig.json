{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@application/*": ["application/*"],
      "@infrastructure/*": ["infrastructure/*"]
    },
    "outDir": "./dist",
  },
  "include":[
    "src/**/*",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "esm": true
}
